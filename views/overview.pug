doctype html 
html 
    head    
        
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Project lists
        link(rel='stylesheet' href='/css/style.css')
        script(src='https://cdn.plot.ly/plotly-2.32.0.min.js' charset="utf-8")
        link(href='https://cdn.lineicons.com/4.0/lineicons.css' rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
        link(rel='stylesheet' href='/css/style.css')
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet")

    body
        .wrapper
            aside#sidebar.expand
                .d-flex
                    button.toggle-btn(type='button')
                        i.lni.lni-grid-alt
                    .sidebar-logo
                        a(href='#') NodeGuardian
                ul.sidebar-nav
                    li.sidebar-item
                        a.sidebar-link(href='#')
                            i.lni.lni-user
                            span Profile
                    li.sidebar-item
                        a.sidebar-link(href=`/a/${accountName}`)
                            i.lni.lni-agenda
                            span Dashboard
                    li.sidebar-item
                        a.sidebar-link(href='#')
                            i.lni.lni-protection
                            span Auth
                    li.sidebar-item
                        a.sidebar-link(href='#')
                            i.lni.lni-popup
                            span Alert Summary
                    li.sidebar-item
                        a.sidebar-link.collapsed.has-dropdown(href='#' data-bs-toggle='collapse' data-bs-target='#auth' aria-expanded='false' aria-controls='auth')
                            i.lni.lni-cog
                            span Project Settings
                        ul#auth.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
                            each project in projectsArr
                                li.sidebar-item
                                    a.sidebar-link(href=`/a/${accountName}/${project[0]}/settings/general`) #{project[0]}
                    .sidebar-footer
                        a.sidebar-link.logout_btn(href='#')
                            i.lni.lni-exit
                            span Logout
            .main.p-3
                main.main This is a overview page
                    each ts in timeStamp
                        .timeStampStat(data-time = `${ts}`)
                    .error_overview_graph
                        .error_overview_graph_container
                            .past1dOverviewGraph 
                                .title Occurrences
                                .inspect_text click to choose projects to inspect
                            #past1day(style="width: 100%;")
                    .project_container 
                        .project_container_header Project list
                        .create_button_container                          
                            button#open-create-project + Create a Project
                        if projectsArr
                            .project_list_container
                                .project_list_title
                                    .project_title Project
                                    each project in projectsArr
                                        .project_overview_info_container
                                            a(class= 'project_name' href=`/a/${accountName}/prj/${project[0]}`) #{project[0]}
                                .project_user_number_container
                                    .project_user Users
                                    each project in projectsArr
                                        .project_overview_info_container        
                                            a(class= 'project_user_numbers' href=`/a/${accountName}/${project[0]}/settings/members`) #{project[2]}  
                        

                    .create-project-window.hidden
                        .create-project-form
                            .value_contianer Let's Create a Project!
                                .form_group
                                    label(for="projectName") Project Name:
                                    input#projectName(type="text" name="projectName" required)
                                .form_group
                                    label(for="token") Token:
                                    input#token(type="text" name="token" readonly)
                                    button#generate-token Generate Token
                                button#submit-create-project Create
                            button.close_btn X


        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe' crossorigin='anonymous')
        script(src='/js/sidebar.js' type="module")
        script(src='/js/overview.js' type="module")
        script(src='/js/logout.js' type="module")