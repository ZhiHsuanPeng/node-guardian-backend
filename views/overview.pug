doctype html 
html 
    head    
        
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Project lists
        link(rel='stylesheet' href='/css/style.css')
        script(src='https://cdn.plot.ly/plotly-2.32.0.min.js' charset="utf-8")

    body
        main.main This is a overview page
            each ts in timeStamp
                .timeStampStat(data-time = `${ts}`)
            .error_overview_graph
                .error_overview_graph_container
                    .past1dOverviewGraph 
                        .title Occurrences
                        .inspect_text click to choose projects to inspect
                    #past1day
            .project_container 
                .project_container_header Project lists
                if projectsArr
                    .project_list_container
                        .project_list_title
                            .project_title Project
                            each project in projectsArr
                                .project_overview_info_container
                                    a(class= 'project_name' href=`/a/${accountName}/prj/${project[0]}`) #{project[0]}
                        .project_user_number_container
                            .project_user Users
                            each project in projectsArr
                                .project_overview_info_container        
                                    a(class= 'project_user' href=`/a/${accountName}/${project[0]}/settings/members`) #{project[2]}        
                button#open-create-project Create a Project

            .create-project-window.hidden
                .create-project-form
                    .value_contianer
                        .form_group
                            label(for="projectName") Project Name:
                            input#projectName(type="text" name="projectName" required)
                        .form_group
                            label(for="token") Token:
                            input#token(type="text" name="token" readonly)
                            button#generate-token Generate Token
                        button#submit-create-project Create
                    button.close_btn X


        
        script(src='/js/overview.js' type="module")