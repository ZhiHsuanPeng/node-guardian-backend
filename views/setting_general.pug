extends template   

block content
    block sidebarContent 
        include setting_sidebar
        .main.p-3
            .setting_container
                .project_owner(data-owner = `${accountName}`)
                .project_name(data-prjname = `${prjName}`)
                .project_ownerId(data-id = `${userId}`)
                .projectId(data-prjid = `${prjId}`)
                .members_title General Settings 
                .members_description You can view and change some basic setting right here.
                hr
                .project_info_container
                    .general_setting_title Project Details
                    .project_id_title Project ID: #{prjId}
                    label(for="projectName" class='general_setting_field') Project Name
                    input#projectName(type="text" name="userEmail" required)
                button.rules_save_btn Save
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe' crossorigin='anonymous')
    script(src='/js/sidebar.js' type="module")
    script(src='/js/generalSettings.js' type="module")
    script(src='/js/logout.js' type="module")