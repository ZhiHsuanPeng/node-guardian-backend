extends template   

block content
    block sidebarContent 
        include setting_sidebar
        .main.p-3
            .main.p-3
                .setting_container
                    .notifications_title Notifications 
                    .notifications_description This page allow you to configure setting for your selected project, click configure to edit the rules.
                    .notifications_container 
                        .channel_column_container
                            .channel_title Active Channel 
                            hr
                            .channel_icon_group
                                a.email_link(href=`/a/${accountName}/${prjName}/settings/notifications/emails`)
                                    i.lni.lni-envelope
                                    .channel_email Email
                                a.email_link_button(href=`/a/${accountName}/${prjName}/settings/notifications/emails`)
                                    button.email_configure_btn Configure
                        
                            
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe' crossorigin='anonymous')
    script(src='/js/sidebar.js' type="module")
    script(src='/js/notificationSettings.js' type="module")
    script(src='/js/logout.js' type="module")