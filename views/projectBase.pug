doctype html 
html 
    head    
        
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title All items
        link(rel='stylesheet' href='/css/style.css')
        script(src='https://cdn.plot.ly/plotly-2.32.0.min.js' charset="utf-8")

    body
        main.main This is a project base page
        
            .errTitle(data-error= `${errorMessageArr}`)
            .projectToken(data-token = `${errObj[0].projectToken}`)
            .errorLogsContainer
                .containerBar
                    .title Error Message 
                    .count Total 
                    .last Last
                    .1daytrends 24 Hours Trends
                    .mute_option Mute
                each error in errObj
                    .errorContainer
                        .timeStampStat(data-time = `${error.timeStamp}`)
                        a.errorTitle(href=`/a/${accountName}/prj/${prjName}/err/${error.err}`) #{error.err}
                        .errCount Count: #{error.count}
                        .errRecent #{error.recentTime}
                        div(id=`${error.err}`)
                        .mute_cotainer
                            if error.mute === true  
                                .mute_status Muting...
                                .mute_expires= `Expires in ${error.muteTime} hours` 
                            select.mutedropdown(data-error=`mute_${error.err}_${error.muteTime}`)
                                option(value="0") none
                                option(value="3600") 1 hour
                                option(value="10800") 3 hours 
                                option(value="21600") 6 hours 
                                option(value="43200") 12 hours  
                                option(value="86400") 24 hours
        script(src='/js/projectPage.js' type="module")
            